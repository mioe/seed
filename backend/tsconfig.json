{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"allowJs": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"typeRoots": [
			"./node_modules/@types",
			"./types"
		],
		"sourceMap": true,
		"outDir": "dist",
		"strict": true,
		"lib": [
			"esnext"
		],
		"baseUrl": ".",
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"moduleResolution": "Node",
		"skipLibCheck": true,
		"paths": {
			"@shared/*": ["../.shared/*"]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": ["node_modules"],
}
